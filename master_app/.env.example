# Globin Care - Environment Configuration Example
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file - only commit .env.example

# ==================== APP CONFIGURATION ====================
APP_NAME=Globin Care
APP_ENV=development
DEBUG_MODE=true

# ==================== API ENDPOINTS ====================
API_BASE_URL=http://localhost:8000/api
API_TIMEOUT=30

AUTH_LOGIN_ENDPOINT=/auth/login
AUTH_LOGOUT_ENDPOINT=/auth/logout
AUTH_REFRESH_TOKEN_ENDPOINT=/auth/refresh

# ==================== DATABASE ====================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=globin_care_db
DB_USER=admin
DB_PASSWORD=your_password_here

# ==================== AUTHENTICATION & TOKENS ====================
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_EXPIRY_HOURS=24
JWT_REFRESH_EXPIRY_DAYS=7

GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here

# ==================== EMAIL CONFIGURATION ====================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password_here
SMTP_FROM_EMAIL=noreply@globincare.com
SMTP_FROM_NAME=Globin Care



FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_PROJECT_ID=your_firebase_project_id_here
FIREBASE_MESSAGING_SENDER_ID=your_firebase_sender_id_here
FIREBASE_APP_ID=your_firebase_app_id_here

# ==================== THIRD-PARTY SERVICES ====================
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=globin-care-bucket

# ==================== LOGGING ====================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
LOG_MAX_FILE_SIZE=10M

# ==================== SECURITY ====================
ENABLE_SSL=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
SESSION_TIMEOUT_MINUTES=30
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true

# ==================== FEATURE FLAGS ====================
ENABLE_TWO_FACTOR_AUTH=true
ENABLE_BIOMETRIC_LOGIN=true
ENABLE_DARK_MODE=true
ENABLE_OFFLINE_MODE=false
MAINTENANCE_MODE=false

# ==================== ANALYTICS ====================
ANALYTICS_ENABLED=true
GOOGLE_ANALYTICS_ID=UA-your-analytics-id-here
SENTRY_DSN=your_sentry_dsn_here

# ==================== DEVELOPER ====================
MOCK_API_RESPONSES=false
VERBOSE_LOGGING=false
ENABLE_PERFORMANCE_MONITORING=true
